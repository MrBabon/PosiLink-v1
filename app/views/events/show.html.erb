<h1>Events#show</h1>
<p>Find me in app/views/events/show.html.erb</p>
<h1><%= @event.title %></h1>
<p><%= @event.description %></p>
<p>Date: <%= @event.date.strftime("%d-%m-%Y") %></p>
<p>Adresse: <%= @event.address %></p>

<h2>Articles</h2>
<% @event.articles.each do |article| %>
  <h3><%= article.title %></h3>
  <p><%= article.content %></p>
<% end %>
