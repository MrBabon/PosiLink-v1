
<section class="d-flex py-5 px-5">
  <div class="profil-page d-flex ps-5">
    <% if current_user.avatar.attached? %>
        <%= image_tag url_for(current_user.avatar), alt: "Avatar de #{current_user.email}", class: "profil-avatar" %>
    <% else %>
    <%= image_tag "cover.png", width: 100, height: 100, alt: "Avatar par dÃ©faut", class: "profil-avatar" %>
    <% end %>
  </div>
  <div class="d-flex px-3 pt-1">
    <div class="px-2 pt-1">
      <h2><%= current_user.nickname %></h2>
    </div>
    <div class="px-2 pt-2">
      <%= button_to "Modifier profil", edit_user_path(current_user), method: :get %>
    </div>
  </div>
</section>

<h2>Mon calendrier</h2>
<div class="container ">
  <%= month_calendar(events: @participations) do |date, participations_of_date| %>
  <%= date %>
  <% participations_of_date.each do |participation| %>
    <div class="meeting">
      <p><%= participation.event.title %></p>
      <p><%= participation.event.address %></p>
    </div>
  <% end %>
  <% end %>
</div>


