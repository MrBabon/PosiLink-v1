<h1>Événements auxquels je participe</h1>
<div class="container">
    <div class="row align-items-center">
        <% @participating_events.each do |event| %>
            <div class="col-xl-4 col-md-6 pb-4">
                <div class="card card-ac">
                    <img src="<%= cl_image_path event.photo.key %>" alt="Événement" class="object-fit-cover img-fluid">
                    <div class="card-body">
                        <h2 class="card-title"><%= event.title %></h2>
                        <p class="date-start">Le <%= event.start_time.strftime('%d %m %y') %><p>
                        <p>À <%= event.address %> </p>
                        <a class="bouton-ac" onclick="window.location.href='<%= event_path(event) %>'">Voir les articles <i class="fa fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>